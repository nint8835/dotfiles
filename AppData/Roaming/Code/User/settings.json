{
    "git.ignoreMissingGitWarning": true,
    "workbench.colorTheme": "Palenight Theme",
    "editor.fontFamily": "'Monoid', 'Fira Code Retina', Consolas, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "window.titleBarStyle": "custom",
    "explorer.confirmDelete": false,
    "files.exclude": {
        "**/__pycache__": true
    },
    "files.autoSave": "onFocusChange",
    "editor.cursorBlinking": "smooth",
    "editor.minimap.enabled": false,
    "files.eol": "\n",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.activityBar.visible": false,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.statusBar.feedback.visible": false,
    "terminal.integrated.shell.windows": "xonsh.bat",
    "python.jediEnabled": false,
    "python.linting.pylintEnabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.blame.toggleMode": "window",
    "gitlens.heatmap.toggleMode": "window",
    "explorer.confirmDragAndDrop": false,
    "verilog.linting.linter": "iverilog",
    "verilog.linting.iverilog.arguments": "-g2012",
    "files.associations": {
        "*.lr": "markdown"
    },
    "material-icon-theme.activeIconPack": "none",
    "material-icon-theme.hidesExplorerArrows": true,
    "git.autofetch": true,

    "json.schemas": [
        {
            "fileMatch": [
                "plugin.json"
            ],
            "url": "https://raw.githubusercontent.com/nint8835/jigsaw/master/plugin.schema.json"
        }
    ],
    "python.linting.flake8Enabled": true,
    "markdownlint.config": {
        "MD013": false,
        "MD041": false,
        "MD002": false
    },
    "editor.fontSize": 12,
    "latex-workshop.message.update.show": false,
    "latex-workshop.latex.recipes": [
        {
            "name": "pdflatex",
            "tools": [
                "pdflatex"
            ]
        },
        {
            "name": "latexmk",
            "tools": [
                "latexmk"
            ]
        },
        {
            "name": "pdflatex -> bibtex -> pdflatex*2",
            "tools": [
                "pdflatex",
                "bibtex",
                "pdflatex",
                "pdflatex"
            ]
        }
    ],
    "workbench.editor.showTabs": false,
    "autoDocstring.docstringFormat": "sphinx"
}