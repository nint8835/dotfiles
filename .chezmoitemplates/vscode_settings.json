{
  "workbench.colorTheme": "Catppuccin Frapp√©",
  "workbench.iconTheme": "catppuccin-frappe",
  "editor.fontFamily": "'PragmataPro Mono Liga', 'Operator Mono SSm Lig', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.fontLigatures": true,
  "editor.cursorBlinking": "smooth",

  // Remove unnecessary UI elements
  "editor.minimap.enabled": false,
  "workbench.activityBar.location": "hidden",
  "workbench.editor.showTabs": "single",

  // Automatically perform / stop confirming common actions
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.autoSave": "onFocusChange",
  "git.autofetch": true,
  "git.confirmSync": false,

  // Clean up the directory tree
  "files.exclude": {
    // Python
    "**/__pycache__": true,
    "**/venv": true,
    "**/.ruff_cache": true
  },

  // Fix VS Code remote issues with Fish
  "remote.SSH.useLocalServer": false,
  "remote.SSH.useExecServer": false,
  "remote.SSH.remotePlatform": {
    "hephaestus": "linux"
  },

  "workbench.startupEditor": "newUntitledFile"
}
